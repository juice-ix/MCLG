import "ui/*";

Scoreboard.add(__id__);
Scoreboard.add(__playerId__);

if (!$uiSize) {
    $uiSize = 500;
}

function  __tick__  () {
    execute as @a run {
        if (!__playerId__:@s) {
            $max = 0;
            execute as @a run $max > __playerId__:@s;
            __playerId__:@s := $max + 1;
        }
    }

    $uiCheck := $uiSize % 50;
    if ($uiCheck > 0) {
        $uiSize := 50 - $uiCheck + $uiSize;
    }
}